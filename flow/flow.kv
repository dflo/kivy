#:kivy 1.7.2

<Tile>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color: 
			rgba: self.color
		Ellipse:
			size: (self.width * .6), (self.width * .6)
			pos: self.center_x - (self.width * .6)/2, self.center_y - (self.width * .6)/2

<Pipe>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color:
			rgba: self.color_bc
		Line:
			points: self.center_x, self.y - 15, self.center_x, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_lc
		Line:
			points: self.x - 15, self.center_y, self.center_x, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_tc
		Line:
			points: self.center_x, self.top + 15, self.center_x, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_rc
		Line:
			points: self.right + 15, self.center_y, self.center_x, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_tb
		Line:
			points: self.center_x, self.top + 15, self.center_x, self.y - 15
			width: self.width * .15
		
		Color:
			rgba: self.color_lr
		Line:
			points: self.x - 15, self.center_y, self.right + 15, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_tl
		Line:
			points: self.center_x, self.y - 15, self.center_x, self.center_y, self.right + 15, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_tr
		Line:
			points: self.center_x, self.y - 15, self.center_x, self.center_y, self.x - 15, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_bl
		Line:
			points: self.center_x, self.top + 15, self.center_x, self.center_y, self.right + 15, self.center_y
			width: self.width * .15
		
		Color:
			rgba: self.color_br
		Line:
			points: self.center_x, self.top + 15, self.center_x, self.center_y, self.x - 15, self.center_y
			width: self.width * .15


<FlowGame>:
    padding: 5
    spacing: 5

<MenuBar>:
	spacing: 5

<AppBackground>:
    canvas:
        Color:
            rgb: 0.08, 0.20, 0.28
        Rectangle:
            size: self.size
