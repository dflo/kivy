#:kivy 1.7.2

<Tile>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color: 
			rgba: self.color
		Ellipse:
			size: (self.width * .6), (self.width * .6)
			pos: self.center_x - (self.width * .6)/2, self.center_y - (self.width * .6)/2

<Pipe>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color:
			rgba: self.color
		Line:
			points: self.center_x, self.top, self.center_x, self.y
			width: self.width * .15

<FlowGame>:
    padding: 5
    spacing: 5

<MenuBar>:
	spacing: 5

<AppBackground>:
    canvas:
        Color:
            rgb: 0.08, 0.20, 0.28
        Rectangle:
            size: self.size
