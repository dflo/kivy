#:kivy 1.7.2

<Tile>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color: 
			rgba: self.color
		Ellipse:
			size: (self.width * .6), (self.width * .6)
			pos: self.center_x - (self.width * .6)/2, self.center_y - (self.width * .6)/2

<Pipe>:
	background_color: 0.3, 0.3, 0.3, 0.3
	canvas:
		Color:
			rgba: self.color
		Ellipse:
			size: (self.width * .6), (self.width * .6)
			pos: self.center_x - (self.width * .6)/2, self.center_y - (self.width * .6)/2
#		Rectangle:
#			size: (self.width * .5), self.height
#			pos: (self.center_x - self.width / 4), self.y

<AppBackground>:
    canvas:
        Color:
            rgb: 0.08, 0.20, 0.28
        Rectangle:
            size: self.size

<FlowGame>:
    cols: 5
    rows: 5
    padding: 5
    spacing: 5
